<div class="pagination">

  <% if @items.prev? %>
    <%= link_to ("&larr; " + _("Previous")).html_safe, params.merge(:page => @items.prev.number, :anchor => @options[:anchor]) %>
  <% else %>
    <span class="disabled"><%= ("&larr; " + _("Previous")).html_safe %></span>
  <% end %>

  <% if @items.next? %>
    <%= link_to (_("Next") + " &rarr;").html_safe, params.merge(:page => @items.next.number, :anchor => @options[:anchor]) %>
  <% else %>
    <span class="disabled"><%= (_("Next") + " &rarr;").html_safe %></span>
  <% end %>

</div>